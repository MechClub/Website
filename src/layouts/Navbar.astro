<!-- Navbar -->
---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import logo from '../images/mechclublogo.png';
---
<nav>
  <!-- Navbar -->
  <div class="fixed flex flex-wrap overflow-hidden m-0 px-2 sm:px-7 bg-mech-200 w-full h-28 border-4 border-t-0 border-mech-500 rounded-b-2xl content-center text-center items-stretch justify-between">
    <!-- Left Hand Side up to # -->
    <div class="flex flex-wrap gap-5 content-center justify-left">
      <a href="/./" class="mx-5" >
        <Image src={logo} class="sm:w-20 sm:h-20 h-16 w-16 self-center" alt="Mech Club logo" loading="eager" width=400 height=400 />
      </a>
      <div class="hidden lg:flex flex-wrap content-center align-center">
        <h1 class="font-sans font-bold text-mech-100 text-5xl">Mech Club</h1>
      </div>
    </div>
    <!-- # -->
    <!-- Right Hand Side up to # -->
    <div class="flex" >
       <!-- for medium sized screens up until ## -->
      <div class="hidden sm:flex gap-3">
        <div class="flex">
          <a href="/about/" class="float-right items-center self-center" >
            <button type="button" class="rounded-full border-4 border-mech-500 text-center text-mech-500 bg-mech-100 w-32 h-16 font-bold">About Us</button>
          </a>
        </div>
        <div class="flex">
          <a href="/resources/" class="float-right items-center self-center color-mech-200" >
            <button type="button" class="rounded-full border-4 border-mech-500 text-center color-mech-500 bg-mech-100 w-32 h-16 font-bold">Resources</button>
          </a>
        </div>
        <div class="flex">
          <a href="/shop/" class="float-right items-center self-center color-mech-200" >
            <button type="button" class="rounded-full border-4 border-mech-500 text-center color-mech-500 bg-mech-100 w-24 h-16 font-bold">Shop</button>
          </a>
        </div>
      </div>
      <!-- ## -->
      <!-- Hamburger Menu for small screens up until ## -->
        <div class="flex sm:hidden items-center justify-center text-center align-center" >
          <a id="hamburger-menu" class="flex rounded-full border-4 border-mech-500 text-center items-center place-center justify-center color-mech-500 bg-mech-100 w-32 h-16 font-bold">
            <div class="flex place-items-center text-center justify-center text-2xl" > (WIP)
              <Icon name="mdi:hamburger-menu" class="font-bold text-4xl pl-2 m-0" />
            </div>
          </a>
        </div>
      <!-- ## -->
    </div>
    <!-- # -->
  </div>
</nav>

