---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import akshat from '../images/meetyourteam/akshat.png';
import brandon from '../images/meetyourteam/brandon.png';
import charlie from '../images/meetyourteam/charlie.png';


import dhruv from '../images/meetyourteam/dhruv.png';

import hannah from '../images/meetyourteam/hannah.png';

import keting from '../images/meetyourteam/keting.png';

import ksenya from '../images/meetyourteam/ksenya.png';

import rafiq from '../images/meetyourteam/rafiq.png';

import shiva from '../images/meetyourteam/shiva.png';

